@model IEnumerable<Ogrenci>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        h1 {
            text-align: center;
            margin-top: 30px;
        }

        .container {
            margin-top: 30px;
        }

        .btn {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Öğrenci İşlemleri</h1>
        <div class="text-right mb-3">
            <a class="btn btn-outline-primary" asp-action="AddStudent" asp-controller="Student">Öğrenci Ekle</a>
        </div>
        <h2>Öğrenci Listesi</h2>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Numara</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>İşlemler</th>
                    <th>Aldığı Dersler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ogr in Model)
                {
                    <tr>
                        <td>@ogr.Numara</td>
                        <td>@ogr.Ad</td>
                        <td>@ogr.Soyad</td>
                        <td>
                            <a class="btn btn-sm btn-outline-success" href="/Student/EditStudent/@ogr.Ogrenciid">Düzenle</a>
                            <a onclick="return confirm('Emin misiniz?')" class="btn btn-sm btn-outline-danger" href="/Student/DeleteStudent/@ogr.Ogrenciid">Sil</a>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-info" href="/Student/OgrenciDersleri/@ogr.Ogrenciid">Aldığı Dersler</a>
                            <a class="btn btn-sm btn-outline-primary" href="/Student/AddDersForOgrenci?studentId=@ogr.Ogrenciid">Ders Ekle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
