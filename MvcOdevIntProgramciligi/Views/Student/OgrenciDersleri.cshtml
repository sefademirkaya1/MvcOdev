@model Ogrenci
@{
    ViewData["Title"] = "OgrenciDersleri";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            margin-top: 30px;
        }

        .card-header {
            background-color: #007bff;
            color: white;
        }

        .no-courses {
            text-align: center;
            font-size: 1.2em;
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">@Model.Ad @Model.Soyad - Aldığı Dersler</h2>
            </div>
            <div class="card-body">
                @if (Model.OgrenciDersler != null && Model.OgrenciDersler.Any())
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Ders Kodu</th>
                                <th>Ders Adı</th>
                                <th>Kredi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ogrDers in Model.OgrenciDersler)
                            {
                                <tr>
                                    <td>@ogrDers.Ders?.DersKodu</td>
                                    <td>@ogrDers.Ders?.DersAd</td>
                                    <td>@ogrDers.Ders?.Kredi</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="no-courses">Bu öğrenci henüz herhangi bir ders almamış.</p>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
